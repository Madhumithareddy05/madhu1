



<h2> Owner DashBoard</h2>
@model AdventureWebSiteTask.Models.Data.PersonViewModel
@{
    ViewBag.Title = "DashBoard";
}

<h2>DashBoard</h2>
<div class="row">
    <h4 class="page-header">SalesPerson Details</h4>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    @{ int j = 1;
                        <table id="myTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>SNo</th>
                                    <th> BusinessEntityID</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Last Name</th>

                                    <th>Email</th>
                                    <th>PhoneNumber</th>

                                    <th>Action</th>

                                </tr>
                            </thead>

                            <tbody>
                                @for (int i = 0; i < ViewBag.SalesPersonData.Count; i++)

                                {
                                    <tr>
                                        <td>@j</td>
                                        <td>@ViewBag.SalesPersonData[i].BusinessEntityID</td>
                                        <td>@ViewBag.SalesPersonData[i].FirstName</td>
                                        <td>@ViewBag.SalesPersonData[i].MiddleName</td>
                                        <td>@ViewBag.SalesPersonData[i].LastName</td>

                                        <td>@ViewBag.SalesPersonData[i].EmailAddress</td>
                                        <td>@ViewBag.SalesPersonData[i].PhoneNumber</td>
                                        <td>
                                            <a href="/employee/Update/">Update</a>
                                            <a href="/employee/Delete/">Delete</a>
                                        </td>



                                    </tr>

                                    j++;

                                }
                            </tbody>



                        </table>

                    }

                </div>
            </div>
        </div>
    </div>
</div>





